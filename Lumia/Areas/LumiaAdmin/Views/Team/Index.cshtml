@model IEnumerable<Team>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sliders</h4>
                    <a class="btn btn-success" asp-area="LumiaAdmin" asp-controller="Team" asp-action="Create">Create Slider</a>
                    <div class="table-responsive pt-3">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Job
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var team in Model)
                                {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="@team.Image" />
                                    </td>
                                    <td>
                                        @team.Name 
                                    </td>
                                    <td>
                                        @team.Job
                                    </td>
                                    <td>
                                        @team.Desc
                                    </td>
                                    <td>
                                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@team.Id">
                                            <i class="mdi mdi-delete-forever"></i>
                                        </a>
                                        <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@team.Id">
                                            <i class="mdi mdi-lead-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                                    count++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
